<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Techo_App.Views.OpcionesPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Orientation="Vertical">
                <Label Text="OPCIONES" HorizontalOptions="Center" FontSize="20"/>
                <Button x:Name="btnCerrarSesion" Text="Cerrar Sesión" BackgroundColor="White" Command="{Binding CerrarSesionCommand}"></Button>
                
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>