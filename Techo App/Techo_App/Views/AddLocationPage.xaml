<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Techo_App.Views.AddLocationPage"
             Title="Check In">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Selecciona  el lugar donde te encuentras" FontSize="24" />
            <Picker x:Name="MainPicker" SelectedIndexChanged="MainPicker_SelectedIndexChanged"/>
            <Picker x:Name="subPicker" />
            <Button x:Name="btnEnviar" Text="Enviar" Clicked="Button_Clicked"/>
            <Label x:Name="lblResultado" FontSize="20"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>